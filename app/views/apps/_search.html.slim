form id="app-search-bar" action=apps_path method="get" class="mt-2"
  .d-join.w-full
    input[
      class="d-join-item d-input w-full" 
      name="search" value=params[:search] 
      placeholder=t('apps.index.searching_app') 
      type="text"
    ]
    button class="d-join-item d-btn" type="submit"
      i.fa-solid.fa-search
    = button_link_to '', apps_path(current_params.merge(sort: :asc)), 'arrow-down-a-z', \
      class: 'd-join-item mr-0'
    = button_link_to '', apps_path(current_params.merge(sort: :desc)), 'arrow-up-z-a', \
      class: 'd-join-item'
