= turbo_frame_tag user, class: 'p-2 ps-3 border-top d-flex' do
  .col-7.col-md-3.my-auto
    = link_to user.email, edit_admin_user_path(user), data: { turbo_frame: :modal }
  .col-3.col-md-3.my-auto
    = user.username.presence || '-'
  .col-3.col-md-2.my-auto
    = user.role_name
  .col-2.col-md-2.my-auto.d-none.d-sm-table-cell
    - if user.access_locked?
      span.d-badge.text-bg-danger = t('admin.users.index.locked')
    - elsif user.confirmed_at
      span.d-badge.text-bg-secondary = t('admin.users.index.activated')
    - else
      span.d-badge.text-bg-primary = t('admin.users.index.inactive')
  .col-2.col-md-2.my-auto.d-none.d-sm-table-cell
    - if user.last_sign_in_at
      = time_ago_in_words(user.last_sign_in_at)
    - else
      = t('admin.users.index.never_logged_in')
