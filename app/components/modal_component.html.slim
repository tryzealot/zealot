= helpers.turbo_frame_tag :modal do
  = content_tag wrapper_tag, class: wrapper_classes, data: wrapper_data, role: 'dialog' do
    div class="modal-box #{modal_size}"
      - if close_button
        form method="dialog"
          button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2" autofocus=false
            i.fa-solid.fa-x
      h3 class="text-lg font-bold"
        = title
      div class="py-4"
        = content || body
      - if content_for? :footer
        div class="modal-action"
          = content_for :footer
